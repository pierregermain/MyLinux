#
# My Shell Aliases
#

# Music

alias sedPath="sed 's/.*\/.*\///'"
alias sedSpaceAsterisc="sed 's/\ /*/'g"
alias sedAsterisc="sed s/\"'\"/*/g"
alias sedSpaceEscaped="sed 's/\ /\\\ /'g"

alias vU='pulseaudio-ctl up +11'
alias vD='pulseaudio-ctl down -12'
alias vM='pulseaudio-ctl mute'

alias audioControl='pavucontrol'

# Bpm

alias bpmt='python ~/GIT_APPS/taptempo/taptempo.py'
# Music Quodlibet
alias qli='quodlibetInfo.sh 2> /dev/null'

alias ql0='quodlibet --set-rating 0;qli'
alias ql1='quodlibet --set-rating 0.25;qli'
alias ql2='quodlibet --set-rating 0.50;qli'
alias ql3='quodlibet --set-rating 0.75;qli'
alias ql4='quodlibet --set-rating 1.00;qli'

alias qlg='quodlibetSetGenre.sh 2> /dev/null'
alias qlb='quodlibetSetBpm.sh'
alias qlr='quodlibetSetRepetido.sh 2> /dev/null'
alias qla='qlg&&qlb'
alias qla1='qla&&ql1'
alias qla2='qla&&ql2'
alias qla3='qla&&ql3'
alias qla4='qla&&ql4'

alias qlPlayPause28='sleep 28m;quodlibet --play-pause'
alias qlPlayPause22='sleep 22m;quodlibet --play-pause'
alias qlPlayPause16='sleep 16m;quodlibet --play-pause'

alias qln='quodlibet --next && qli'
alias qlp='quodlibet --previous && qli'
alias qls='quodlibet --play-pause'

alias qlP='quodlibet --seek 0:00&&qli'
alias qlQ='quodlibet --seek 0:30&&qli'
alias qlW='quodlibet --seek 1:00&&qli'
alias qlE='quodlibet --seek 1:30&&qli'
alias qlR='quodlibet --seek 2:00&&qli'
alias qlT='quodlibet --seek 2:30&&qli'
alias qlY='quodlibet --seek 3:00&&qli'
alias qlU='quodlibet --seek 5:00&&qli'
alias qlI='quodlibet --seek 7:00&&qli'
alias qlO='quodlibet --seek 9:00&&qli'

# Music mocp
alias mcb="mocSetBpm.sh"
alias mcg="mocSetGenre.sh"

alias moc='mocp'
alias mocSleep28='sleep 28m;mocp stop'
alias mocSleep24='sleep 24m;mocp stop'
alias mocSleep='sleep 18m;mocp stop'
alias mocConfig='vi ~/.moc/config'

alias mixxxCdSkin='cd /usr/share/mixxx/skins/'

# Encoding

alias ape2flacs='cuebreakpoints *.cue | shnsplit -o flac *.ape'
alias cue2flactagging='cuetag *.cue split-track*.flac'

