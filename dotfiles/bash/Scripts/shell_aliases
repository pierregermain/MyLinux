#Remove Old Files

function removeXXXdaysOldFiles() {
sudo find . -mtime +$1 -exec rm {} \;
}

alias rmLasModifiedFileFromDir='echo "removing ...";ls -t|head -n1;rm `ls -t|head -n1`'

